{% extends 'admin/base.html.twig' %}

{% block title %}Hello Article!{% endblock %}
{% set menu = 'article' %}

{% block body %}
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between my-4">
            <h1 class="h3 mb-0">Article</h1>
            <a class="btn btn-outline-dark" href="{{ url('admin-article-create') }}">
                <i class="fas fa-plus-circle"></i>
            </a>
        </div>

        {{ include('admin/flash.html.twig') }}

        <div class="mb-4">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Published At</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% if articles|length > 0 %}
                        {% for article in articles %}
                            <tr>
                                <th scope="row">{{ article.id }}</th>
                                <td>{{ article.title }}</td>
                                <td>{{ article.createdAt|date('d.m.Y H:i') }}</td>
                                <td>{{ article.publishedAt|date('d.m.Y H:i') }}</td>
                                <td>
                                    <a class="btn btn-outline-dark" href="{{ url('admin-article-detail', { id: article.id }) }}">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a class="btn btn-outline-dark" href="{{ url('admin-article-update', { id: article.id }) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-outline-dark" href="{{ url('admin-article-delete', { id: article.id }) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5">no rows</td>
                        </tr>
                    {% endif %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
